<Window x:Class="DesktopContactsApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="Contact Details" Height="300" Width="300" WindowStartupLocation="CenterScreen" Icon="contacts.png" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock>Name</TextBlock>
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5"></TextBox>
            <TextBlock>Email</TextBlock>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"></TextBox>
            <TextBlock>Phone Number</TextBlock>
            <TextBox x:Name="phonenoTextBox" Margin="0,0,0,5"></TextBox>
            <Button x:Name="SaveButton" Margin="0,0,0,5" Content="Save" Click="SaveButton_Click"></Button>
            <Button x:Name="DeleteButton" Content="Delete" Background="Red" Foreground="White" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
